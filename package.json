{
  "name": "wiki",
  "version": "1.0.0",
  "description": "Wiki theme",
  "author": "Rick Torres",
  "license": "GPL-2.0",
  "private": true,
  "scripts": {
    "build": "npm-run-all css minifyCSS",
    "css": "npm-run-all css:precompile css:autoprefix",
    "css:autoprefix": "postcss --use autoprefixer --no-map --replace style.css",
    "css:precompile": "node-sass --omitSourceMapUrl true --include-path src src/sass/theme.scss style.css",
    "watch": "npm run css && onchange \"src/sass/**/*.scss\" -- npm run css",
    "minifyCSS": "cleancss -o style.css style.css"
  },
  "devDependencies": {
    "autoprefixer": "^10.0.1",
    "clean-css-cli": "^4.3.0",
    "node-sass": "^4.14.1",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.0.2",
    "postcss": "^8.1.1",
    "postcss-cli": "^8.0.0",
    "stylelint": "^13.7.2",
    "stylelint-config-standard": "^20.0.0"
  },
  "engines": {
    "node": "^8.0"
  }
}
