{
  "name": "wiki",
  "version": "1.0.0",
  "description": "Wiki theme",
  "author": "Rick Torres",
  "license": "GPL-2.0",
  "private": true,
  "scripts": {
    "build": "npm-run-all lint css minifyCSS minifyJS",
    "css": "npm-run-all css:precompile css:autoprefix",
    "css:autoprefix": "postcss --use autoprefixer --no-map --replace style.css",
    "css:precompile": "node-sass --omitSourceMapUrl true --include-path src src/sass/theme.scss style.css",
    "watch:css": "npm run lint css && onchange \"src/sass/components/**/*.scss\" -- npm-run-all lint css",
    "minifyCSS": "cleancss -o style.css style.css",
    "minifyJS": "uglifyjs --compress --mangle --output \"src/js/main.min.js\" -- \"src/js/main.js\""
  },
  "devDependencies": {
    "autoprefixer": "^9.7.5",
    "clean-css-cli": "^4.3.0",
    "node-sass": "^4.13.1",
    "npm-run-all": "^4.1.5",
    "onchange": "^6.1.0",
    "postcss-cli": "^7.1.0",
    "stylelint": "^13.2.1",
    "stylelint-config-standard": "^20.0.0",
    "uglify-js": "^3.8.0"
  },
  "engines": {
    "node": "^8.0"
  }
}
